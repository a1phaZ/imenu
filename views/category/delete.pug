extends ../layout

block content
  .page-header
    h1 Удаление категории #{category.title}

  .row
    form.form-horizontal.col-sm-12.col-md-6.col-lg-4.col-md-offset-3.col-lg-offset-4(method='POST')
      .form-group
        button.form-control.btn.btn-danger(type='submit', disabled=!isAdmin)
          i.fa.fa-floppy-o
          | Удалить категорию
        a.form-control.btn.btn-primary(disabled=!isAdmin, href='/category')
          i.fa.fa-floppy-o
          | Отменить удаление