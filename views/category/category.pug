extends ../layout

block content
  .page-header
    if categoryTitle
      h1#page-header #{categoryTitle.toUpperCase()}
    else 
      h1#page-header Новая категория
  .row
    form.form-horizontal.col-sm-12(role='form', enctype='multipart/form-data', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label.col-sm-3.control-label Изображение
        .col-sm-7.logo-section
          input(type='file', class='btn btn-primary', name='imageFile', id='imageFile', accept="image/*")
      .form-group
        label.col-sm-3.control-label(for='title') Название
        .col-sm-7
          input.form-control(type='text', name='title', id='title', placeholder='Название', autofocus, required, value=categoryTitle, disabled=!isAdmin)
      .form-group
        label.col-sm-3.control-label(for='description') Описание
        .col-sm-7
          textarea.form-control(name='description', id='description', placeholder='Описание', rows='7', required, disabled=!isAdmin) #{categoryDescription}
      .form-group
        .col-sm-offset-3.col-sm-7
          button.col-sm-12.btn.btn-primary(type='submit', disabled=!isAdmin)
            if categoryTitle
              i.fa.fa-floppy-o
              | Обновить категорию
            else
              i.fa.fa-plus
              | Создать категорию