doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)
    title #{title} - iMenu
    link(rel='shortcut icon', href='/favicon.png')
    //- link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='/css/font-awesome.min.css')
    link(rel='stylesheet', href='/css/spectre.min.css')
    link(rel='stylesheet', href='/css/spectre-exp.min.css')
    link(rel='stylesheet', href='/css/docs.css')

  body
    include partials/header

    .container
      include partials/flash
      .columns
        #category.docs-sidebar.column.col-2.col-md-12
          include partials/category
        a(href="#category-close", id="category-close", class="docs-nav-clear")
        .docs-content.column.col-8.col-md-12
          //- ol.breadcrumb#breadcrumb(style="padding-top: 72px;")
          block content
        #sidebar.docs-sidebar.column.col-2.col-md-12
          include partials/manage
        a(href="#sidebar-close", id="sidebar-close", class="docs-nav-clear")

    include partials/footer
    include partials/notify

    script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.min.js')
    script(src='/js/lib/jquery-2.2.4.min.js')
    //- script(src='/js/lib/bootstrap.min.js')
    //- script(src='/js/status.js')
