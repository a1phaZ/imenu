extends ../layout

block content
  .content
    .container-fluid
      .row
        .col-xs-12.col-sm-8.col-sm-offset-2
          .card
            .header
              h4.title #{title}
            .content
              form(method='POST')
                input(type='hidden', name='_csrf', value=_csrf)
                .row
                  .col-md-12
                    .form-group
                      label(for='email') Email
                      input.form-control.border-input(type='email', name='email', id='email', placeholder='Email', autofocus, required)
                .row
                  .col-md-12
                    .form-group
                      label(for='password') Пароль
                      input.form-control.border-input(type='password', name='password', id='password', placeholder='Пароль', required)
                .row
                  .col-md-12
                    a(href='/forgot') Забыли пароль?
                .row
                  .col-md-12              
                    .text-center
                      button.btn.btn-info.btn-fill.btn-wd(type='submit')
                        i.ti-key 
                        | Войти
                .clearfix