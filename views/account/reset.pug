extends ../layout

block content
  header.text-center
    h2#page-header Изменить пароль
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.form-label(for='password') Новый пароль
      input.form-input(type='password', name='password', id='password', placeholder='Новый пароль', autofocus, required)
    .form-group
      label.form-label(for='confirm') Подтвердите пароль
      input.form-input(type='password', name='confirm', id='confirm', placeholder='Подтвердите пароль', required)
    .form-group
      button.btn.btn-primary.btn-reset(type='submit')
        i.fa.fa-keyboard-o
        | Изменить пароль
