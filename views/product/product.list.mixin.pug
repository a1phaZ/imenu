mixin product-list(product)
  .col-lg-3.col-md-4.col-sm-6
    .product-card
      .product-card-header
        img(src='http://placehold.it/800x500', class='img-responsive logo product-card-logo')
        span.discount.green #{product.discount} 
          i.fa.fa-percent
      .product-card-description 
        h3.product-title
          a(href='/category/'+categorySlug+'/'+product.slug) #{product.title}
        span.product-description #{product.description}
        span.product-composition #{product.composition}
        span.product-price.red #{product.price}
          i.fa.fa-rub
        span.product-waiting 
          i.fa.fa-clock-o #{product.waiting}
        button.btn.btn-danger.cart-add-btn()
          i.fa.fa-shopping-cart


for product in productList
  +product-list(product)